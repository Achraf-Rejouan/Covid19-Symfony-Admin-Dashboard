{% extends 'base.html.twig' %}

{% block title %}Medecin index{% endblock %}

{% block body %}
    <h1>Medecin index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_medecin</th>
                <th>Nom_prenom</th>
                <th>Code</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medecin in medecins %}
            <tr>
                <td>{{ medecin.idMedecin }}</td>
                <td>{{ medecin.nomPrenom }}</td>
                <td>{{ medecin.code }}</td>
                <td>
                    <a href="{{ path('app_medecin_show', {'id_medecin': medecin.idMedecin}) }}">show</a>
                    <a href="{{ path('app_medecin_edit', {'id_medecin': medecin.idMedecin}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medecin_new') }}">Create new</a>
{% endblock %}
