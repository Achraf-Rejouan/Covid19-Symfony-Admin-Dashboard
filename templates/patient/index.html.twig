{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
    <h1>Patient index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id_patient</th>
                <th>Nom_prenom</th>
                <th>Date_naiss</th>
                <th>Genre</th>
                <th>Date_entree</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.nomPrenom }}</td>
                <td>{{ patient.dateNaiss ? patient.dateNaiss|date('Y-m-d') : '' }}</td>
                <td>{{ patient.genre }}</td>
                <td>{{ patient.dateEntree ? patient.dateEntree|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_patient_show', {'id': patient.id}) }}">Show</a>
                    <a href="{{ path('app_patient_edit', {'id': patient.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_patient_new') }}">Create new</a>
{% endblock %}
